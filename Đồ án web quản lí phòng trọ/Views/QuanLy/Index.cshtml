@model IEnumerable<Đồ_án_web_quản_lí_phòng_trọ.Models.QuanLy>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        border-bottom: 1px solid #ddd;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    .action-links a {
        margin-right: 10px;
        color: #428bca;
        text-decoration: none;
    }

        .action-links a:hover {
            text-decoration: underline;
        }
</style>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaQuanLy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenQuanLy)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaQuanLy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenQuanLy)
            </td>
            <td class="action-links">
                @Html.ActionLink("Edit", "Edit", new { id = item.MaQuanLy }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaQuanLy }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaQuanLy })
            </td>
        </tr>
    }

</table>
