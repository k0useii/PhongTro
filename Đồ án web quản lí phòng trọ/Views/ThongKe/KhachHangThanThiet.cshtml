@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Thông Tin Khách Hàng Có Nhiều Phiếu Thu Tiền</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        h2 {
            text-align: center;
            padding: 40px;
        }

        table {
            width: 80%;
            margin: auto;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 15px;
            text-align: left;
        }

        th {
            background-color: #007bff;
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h2>Khách hàng thân thiết</h2>
    <table>
        <tr>
            <th>Mã Khách Hàng</th>
            <th>Tên Khách Hàng</th>
            <th>Số Tháng Đã Thuê</th>
        </tr>
        @foreach (var khachHang in ViewBag.KhachHangs)
        {
            <tr>
                <td>@khachHang.MaKhachHang</td>
                <td>@khachHang.TenKhachHang</td>
                <td>@khachHang.PhieuThuTiens.Count</td>
            </tr>
        }
    </table>
</body>
</html>
