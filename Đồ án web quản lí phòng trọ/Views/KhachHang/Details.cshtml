@model Đồ_án_web_quản_lí_phòng_trọ.Models.KhachHang

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/CSS/quanly.css" rel="stylesheet" />
<style>
    .details-container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
    }

    .details-title {
        text-align: center;
        margin-bottom: 20px;
    }

    .details-list {
        list-style: none;
        padding: 0;
    }

    .details-list-item {
        margin-bottom: 10px;
    }

    .details-label {
        font-weight: bold;
    }

    .details-value {
        margin-left: 10px;
    }

    .back-link {
        display: block;
        text-align: center;
        margin-top: 20px;
    }
</style>

<h2 class="details-title">Details</h2>

<div class="details-container">
    <ul class="details-list">
        <li class="details-list-item">
            <span class="details-label">Mã Khách Hàng:</span>
            <span class="details-value">@Html.DisplayFor(model => model.MaKhachHang)</span>
        </li>
        <li class="details-list-item">
            <span class="details-label">Tên Khách Hàng:</span>
            <span class="details-value">@Html.DisplayFor(model => model.TenKhachHang)</span>
        </li>
        <li class="details-list-item">
            <span class="details-label">Địa Chỉ:</span>
            <span class="details-value">@Html.DisplayFor(model => model.DiaChi)</span>
        </li>
        <li class="details-list-item">
            <span class="details-label">CCCD:</span>
            <span class="details-value">@Html.DisplayFor(model => model.CCCD)</span>
        </li>
        <li class="details-list-item">
            <span class="details-label">Số Điện Thoại:</span>
            <span class="details-value">@Html.DisplayFor(model => model.SDT)</span>
        </li>
        <li class="details-list-item">
            <span class="details-label">Mã Tài Khoản:</span>
            <span class="details-value">@Html.DisplayFor(model => model.MaTaiKhoan)</span>
        </li>
    </ul>
</div>
<p class="back-link">
    @Html.ActionLink("Back to List", "Index")
</p>
