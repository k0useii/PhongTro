            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaPhong)
            </dd>

        </dl>
    </div>
    <a href="~/PhieuThuTien/Create/@Model.MaPhieuTTP" id="button-details">Lập phiếu thu tiền</a>
    <div>
        <a href="~/PhieuThueTraPhong/Index" id="button-back">Trở về</a>
        <a href="~/PhieuThueTraPhong/Edit/@Model.MaPhieuTTP" id="button-edit">Sửa</a>
    </div>
</div>
