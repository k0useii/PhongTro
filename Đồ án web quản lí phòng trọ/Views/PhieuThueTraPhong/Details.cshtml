            </dt>

            <dd>
                @Html.DisplayFor(model => model.SDT)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NgayThue)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NgayThue)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TenKhachHang)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenKhachHang)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NgayTra)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NgayTra)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MaQuanLy)
